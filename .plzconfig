[please]
version = 15.4.0

[parse]
preloadbuilddefs = build_defs/binary.build_defs
#preloadbuilddefs = build_defs/go_module.build_defs

[go]
importpath = github.com/sagikazarmark/please-go-modules

[buildconfig]
hub-version = 2.14.2

[alias "godeps"]
desc = Generate third-party dependency rules for a Go project
cmd = run //cmd/gogetgen -- -dir third_party/go -clean -genpkg -subinclude "//build_defs"

[alias "publish"]
desc = Publish build artifacts to GitHub
cmd = run :publish --
